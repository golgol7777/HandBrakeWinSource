#! /bin/sh
#

inpath()
{
    IFS=:
    for d in $PATH
    do
        if [ -x $d/$1 ]; then
            return 0
        fi
    done
    return 1
}

for p in python2.7 python2.6 python2.5 python2.4 python2 python
do
    if ( inpath $p ); then
        exec $p `dirname $0`/make/configure.py "$@"
        exit 0
    fi
done

echo "ERROR: no suitable version of python found."
exit 1
